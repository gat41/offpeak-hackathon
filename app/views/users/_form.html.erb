<div class="name-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name, type: 'first_name' %>
 	<%= form.label :last_name %>
  <%= form.text_field :last_name, type: 'last_name' %>
</div>

<div class="email-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="gender-field">
   <%= form.label :gender %></div>
   <span class="option">Male<span><%= form.radio_button :gender, "male" %>
   <span class="option">Female<span><%= form.radio_button :gender, "female" %></br>
</div>

