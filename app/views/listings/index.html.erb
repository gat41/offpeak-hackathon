<% if @listings.blank? %>
  <h4>There are no listings containing the term <%= params[:listing] %>.</h4>
<% end %>

<h1>My Listings</h1>
 
<table>
 
  <% @listings.each do |listing| %>
    <tr>
      <td><%= listing.listing_name %></td>
      <td><%= listing.description %></td>
      <td><%= listing.address %></td>
      <td><%= listing.property_type %></td>
      <td><%= listing.room_type %></td>
      <td><%= listing.num_guests %></td>
      <td><%= listing.num_bedroom %></td>
      <td><%= listing.num_beds %></td>
      <td><%= listing.num_bathroom %></td>
      <td><%= listing.price_per_night %></td>
      
      <% if listing.user_id == current_user.id %>
        <td><%= link_to 'Show', listing_path(listing) %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td> <td><%= link_to 'Delete', listing_path(listing), method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      <% end %>

    </tr>
  <% end %>
</table>
